generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Payment & Subscription (KRITISCH - NICHT ÄNDERN!)
  stripeCustomerId String?   @unique
  subscriptionEnd  DateTime? // Wenn null oder in Vergangenheit -> Kein Zugriff

  // Admin-Flag (Sicherheit: Statt E-Mail-Check)
  isAdmin Boolean @default(false)

  // Relationen
  accounts            Account[]
  sessions            Session[]
  chats               Chat[]
  documents           Document[]
  passwordResetTokens PasswordResetToken[]
  userActivities      UserActivity[]
  featureUsages       FeatureUsage[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Chat {
  id        String   @id @default(cuid())
  userId    String
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationen
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  documents Document[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  content   String // Text für lange Nachrichten
  role      String // 'user' oder 'assistant'
  createdAt DateTime @default(now())

  // Relationen
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
}

model Document {
  id           String   @id @default(cuid())
  chatId       String
  userId       String
  fileName     String // Original-Dateiname
  fileSize     Int // Größe in Bytes
  mimeType     String // MIME-Type
  openaiFileId String?  @unique // OpenAI File ID (null für Bilder, die nur Base64 haben)
  base64Data   String? // Base64 für Bilder (nur für Vision API)
  createdAt    DateTime @default(now())
  expiresAt    DateTime // Automatische Löschung nach 30 Tagen

  // Relationen
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expires])
}

model LoginAttempt {
  id        String   @id @default(cuid())
  email     String
  ipAddress String?
  success   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email, createdAt])
  @@index([ipAddress, createdAt])
  @@index([createdAt])
}

// Analytics: User-Aktivitäten tracken
model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  action    String   // z.B. 'page_view', 'feature_used', 'tool_opened'
  page      String?  // Welche Seite/Route
  feature   String?  // Welches Feature/Tool
  metadata  String?  // JSON-String für zusätzliche Daten
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([feature, createdAt])
  @@index([createdAt])
}

// Analytics: Feature-Nutzung detailliert
model FeatureUsage {
  id        String   @id @default(cuid())
  userId    String
  feature   String   // Tool-Name oder Feature-Name
  category  String?  // Kategorie (z.B. 'Büro & Organisation')
  duration  Int?     // Nutzungsdauer in Sekunden (optional)
  success   Boolean  @default(true) // War die Nutzung erfolgreich?
  metadata  String?  // JSON-String für zusätzliche Daten
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([feature, createdAt])
  @@index([category, createdAt])
  @@index([createdAt])
}
