generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime? // Letzter Login-Zeitpunkt

  // Payment & Subscription (KRITISCH - NICHT ÄNDERN!)
  stripeCustomerId String?   @unique
  subscriptionEnd  DateTime? // Wenn null oder in Vergangenheit -> Kein Zugriff

  // Admin-Flag (Sicherheit: Statt E-Mail-Check)
  isAdmin Boolean @default(false)

  // Relationen
  accounts            Account[]
  sessions            Session[]
  chats               Chat[]
  documents           Document[]
  passwordResetTokens PasswordResetToken[]
  userActivities      UserActivity[]
  featureUsages       FeatureUsage[]
  feedbacks           Feedback[]
  tokenUsages         TokenUsage[]
  workspaces          Workspace[]
  results             Result[]
  mealPreferences         MealPreferences?
  weeklyPlans             WeeklyPlan[]
  userShoppingLists       UserShoppingLists?
  shoppingListFrequentItems ShoppingListFrequentItem[]
  userCalendar            UserCalendar?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Chat {
  id          String   @id @default(cuid())
  userId      String
  workspaceId String?  // Optional: Workspace-Zuordnung
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationen
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull)
  messages  Message[]
  documents Document[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  content   String // Text für lange Nachrichten
  role      String // 'user' oder 'assistant'
  createdAt DateTime @default(now())

  // Relationen
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
}

model Document {
  id           String   @id @default(cuid())
  chatId       String
  userId       String
  fileName     String // Original-Dateiname
  fileSize     Int // Größe in Bytes
  mimeType     String // MIME-Type
  openaiFileId String?  @unique // OpenAI File ID (null für Bilder, die nur Base64 haben)
  base64Data   String? // Base64 für Bilder (nur für Vision API)
  createdAt    DateTime @default(now())
  expiresAt    DateTime // Automatische Löschung nach 30 Tagen

  // Relationen
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([userId])
  @@index([expiresAt])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@index([expires])
}

model LoginAttempt {
  id        String   @id @default(cuid())
  email     String
  ipAddress String?
  success   Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email, createdAt])
  @@index([ipAddress, createdAt])
  @@index([createdAt])
}

// Analytics: User-Aktivitäten tracken
model UserActivity {
  id        String   @id @default(cuid())
  userId    String
  action    String   // z.B. 'page_view', 'feature_used', 'tool_opened'
  page      String?  // Welche Seite/Route
  feature   String?  // Welches Feature/Tool
  metadata  String?  // JSON-String für zusätzliche Daten
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([feature, createdAt])
  @@index([createdAt])
}

// Analytics: Feature-Nutzung detailliert
model FeatureUsage {
  id        String   @id @default(cuid())
  userId    String
  feature   String   // Tool-Name oder Feature-Name
  category  String?  // Kategorie (z.B. 'Büro & Organisation')
  duration  Int?     // Nutzungsdauer in Sekunden (optional)
  success   Boolean  @default(true) // War die Nutzung erfolgreich?
  metadata  String?  // JSON-String für zusätzliche Daten
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([feature, createdAt])
  @@index([category, createdAt])
  @@index([createdAt])
}

// Feedback: User-Feedback für Tools und Features
model Feedback {
  id        String   @id @default(cuid())
  userId    String
  toolId    String   // z.B. 'email', 'excel', 'legal'
  toolName  String   // z.B. 'E-Mail Verfasser', 'Excel-Coach'
  resultId  String?  // Optional: ID des generierten Ergebnisses
  type      String   // 'positive' oder 'negative'
  metadata  String?  // JSON-String für zusätzliche Daten (z.B. Kommentar)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([toolId, createdAt])
  @@index([type, createdAt])
  @@index([createdAt])
}

// Usage-Tracking: AI-Token-Verbrauch pro User und Tool
model TokenUsage {
  id               String   @id @default(cuid())
  userId           String
  toolId           String   // z.B. 'email', 'excel', 'chat'
  toolName         String   // z.B. 'E-Mail Verfasser', 'Excel-Coach'
  model            String   // z.B. 'gpt-4o-mini', 'gpt-4o'
  promptTokens     Int      // Input-Tokens
  completionTokens Int      // Output-Tokens
  totalTokens      Int      // Gesamt-Tokens
  estimatedCost    Float    // Geschätzte Kosten in USD
  createdAt        DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([toolId, createdAt])
  @@index([createdAt])
}

// Workspace: Organisation von Tool-Ergebnissen und Workflows
model Workspace {
  id         String   @id @default(cuid())
  userId     String
  name       String
  icon       String?  // Icon-Name (z.B. 'Briefcase', 'Plane')
  color      String?  // Farbe (z.B. 'blue', 'green')
  isArchived Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relationen
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  chats       Chat[]
  results     Result[]
  weeklyPlans WeeklyPlan[]

  @@index([userId, isArchived])
  @@index([userId, createdAt])
}

// Result: Tool-Ergebnisse (z.B. generierte E-Mails, Rezepte, etc.)
model Result {
  id          String   @id @default(cuid())
  userId      String
  workspaceId String?  // Optional: Workspace-Zuordnung
  toolId      String   // z.B. 'email', 'recipe', 'fitness'
  toolName    String   // z.B. 'E-Mail Verfasser', 'Gourmet-Planer'
  title       String?  // Optional: Titel des Ergebnisses
  content     String   // JSON oder Text des Ergebnisses
  metadata    String?  // JSON-String für zusätzliche Daten
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationen
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([workspaceId, createdAt])
  @@index([toolId, createdAt])
  @@index([createdAt])
}

// Meal Preferences: User-Präferenzen für Wochenplaner (Premium)
model MealPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  dietType        String?  // z.B. 'vegetarisch', 'vegan', 'low-carb', 'high-protein', 'keine'
  allergies       String?  // JSON-Array: ['Nüsse', 'Gluten', 'Laktose']
  householdSize   Int      @default(2) // Anzahl Personen
  budgetRange     String?  // 'low' (30€), 'medium' (50€), 'high' (80€)
  mealTypes       String?  // JSON-Array: ['abendessen', 'lunch', 'frühstück']
  mealPrep        Boolean  @default(false) // Meal-Prep gewünscht?
  cookingLevel    String?  // 'anfänger' (15 Min), 'fortgeschritten' (30 Min), 'profi' (60+ Min)
  preferredCuisines String? // JSON-Array: ['mediterran', 'asiatisch', 'deutsch']
  dislikedIngredients String? // JSON-Array: ['Pilze', 'Oliven']
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Weekly Plan: Gespeicherte Wochenpläne mit Feedback
model WeeklyPlan {
  id              String   @id @default(cuid())
  userId          String
  workspaceId     String?
  weekStart       DateTime // Montag der Woche
  weekEnd         DateTime // Sonntag der Woche
  planData        String   // JSON: { '2025-01-27': { recipeId, resultId, feedback: 'positive'|'negative'|null } }
  budgetEstimate  Float?   // Geschätzte Kosten für die Woche
  totalFeedback   Int      @default(0) // Anzahl positiver Feedbacks
  autoPlanned     Boolean  @default(false) // Wurde automatisch geplant?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace? @relation(fields: [workspaceId], references: [id], onDelete: SetNull)

  @@unique([userId, weekStart])
  @@index([userId, weekStart])
  @@index([workspaceId, weekStart])
  @@index([createdAt])
}

// Einkaufslisten pro User – sync über Geräte (wie Gourmet-Planer)
model UserShoppingLists {
  id        String   @id @default(cuid())
  userId    String   @unique
  listsJson String   // JSON: ShoppingList[] (id, name, items)
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Kalender: Events (Custom + Meals + Workouts) pro User
model UserCalendar {
  id         String   @id @default(cuid())
  userId     String   @unique
  eventsJson String   @default("[]") // JSON: CalendarEvent[]
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Smart History: häufig gekaufte Items pro User (Quick-Add & Type-Ahead)
model ShoppingListFrequentItem {
  id         String   @id @default(cuid())
  userId     String
  itemLabel  String   // normalisierter Anzeigename (z.B. "Milch", "Eier")
  usageCount Int      @default(1)
  lastUsedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, itemLabel])
  @@index([userId])
  @@index([userId, usageCount])
}
